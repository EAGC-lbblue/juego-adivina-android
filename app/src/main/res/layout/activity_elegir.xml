<?xml version="1.0" encoding="utf-8"?>
<ScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_height="match_parent"
    android:layout_width="match_parent"
    android:background="@drawable/fndelec">
    <RelativeLayout
        android:layout_height="match_parent"
        android:layout_width="match_parent"
        android:gravity="center">
        <ImageView
            android:id="@+id/naruto"
            android:onClick="Jugar"
            android:layout_width="300dp"
            android:layout_height="200dp"
            android:src="@drawable/logonar"
            android:layout_marginTop="50dp"
            android:layout_centerHorizontal="true"
            />
        <ImageView
            android:id="@+id/onepunch"
            android:onClick="Jugar"
            android:layout_marginTop="250dp"
            android:layout_width="300dp"
            android:layout_height="250dp"
            android:src="@drawable/logoone"
            android:layout_centerHorizontal="true"
            />
        <ImageView
            android:id="@+id/myhero"
            android:onClick="Jugar"
            android:layout_marginTop="500dp"
            android:layout_width="300dp"
            android:layout_height="250dp"
            android:src="@drawable/logoboku"
            android:layout_centerHorizontal="true"/>
        <ImageView
            android:id="@+id/nantsu"
            android:onClick="Jugar"
            android:layout_marginTop="750dp"
            android:layout_centerHorizontal="true"
            android:layout_width="300dp"
            android:layout_height="250dp"
            android:src="@drawable/logonan"
            />
        <ImageView
            android:id="@+id/horaventura"
            android:onClick="Jugar"
            android:layout_marginTop="1000dp"
            android:layout_centerHorizontal="true"
            android:layout_width="300dp"
            android:layout_height="250dp"
            android:src="@drawable/logohora"
            />
    </RelativeLayout>
</ScrollView>

